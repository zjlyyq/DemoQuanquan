<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content">
    <android.support.v7.widget.CardView
        android:alpha="0.9"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:descendantFocusability="beforeDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头像，用户名，发布时间，客户端型号，关注键-->
            <LinearLayout
                android:id="@+id/whoLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--头像-->
                <com.example.zjlyyq.demo.Widget.CircleImageView
                    android:gravity="start"
                    android:id="@+id/header"
                    android:scaleType="centerCrop"
                    android:src="@drawable/touxiang3"
                    android:layout_weight="0.12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    />
                <!--用户名/发布时间/手机型号-->
                <LinearLayout
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/name"
                            android:fontFamily="monospace"
                            android:text="用户名"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="bottom"
                            android:id="@+id/publish_time"
                            android:fontFamily="monospace"
                            android:text="发布时间"
                            android:textColor="#595858"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                </LinearLayout>
                <Button
                    android:layout_weight="0.2"
                    android:id="@+id/fellow_bt"
                    android:text="+关注"
                    android:focusable="false"
                    android:textColor="#e25c23"
                    android:background="@color/cardview_light_background"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <!--正文-->
            <TextView
                android:id="@+id/talk"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--九宫格图片-->
            <com.example.zjlyyq.demo.NoScrollGridView
                android:id="@+id/gridview"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp"
                android:horizontalSpacing="2dp"
                android:paddingTop="20dp"
                android:focusable="false"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.zjlyyq.demo.NoScrollGridView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.7"
                android:background="#33000000" />
            <!--点赞，转发，评论-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="0.3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:scaleType="fitCenter"
                            android:id="@+id/bt_favor"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:focusable="false"
                            android:background="@drawable/dianzan"/>
                        <TextView
                            android:layout_gravity="center"
                            android:text="点赞"
                            android:textSize="10dp"
                            android:textColor="#595858"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:alpha="0.7"
                    android:background="#33000000" />
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="0.4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:id="@+id/bt_comment"
                            android:scaleType="fitCenter"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:focusable="false"
                            android:background="@drawable/comments"/>
                        <TextView
                            android:text="评论"
                            android:layout_gravity="center"
                            android:textSize="10dp"
                            android:textColor="#595858"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="11dp"
                    android:alpha="0.5"
                    android:background="#33000000" />
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="0.3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageButton
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:focusable="false"
                            android:background="@drawable/skip"/>
                        <TextView
                            android:layout_gravity="center"
                            android:text="转发"
                            android:textSize="10dp"
                            android:textColor="#595858"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
