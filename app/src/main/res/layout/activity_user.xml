<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/button"
            android:singleLine="false"
            android:background="?attr/actionModeCloseDrawable" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的"
            android:id="@+id/userTitle"
            android:gravity="center"
            android:layout_weight="1.01"
            android:textSize="22dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button5"
            android:background="@drawable/editpaine"
            android:backgroundTint="@color/abc_input_method_navigation_guard" />


    </LinearLayout>
    <com.example.zjlyyq.demo.Widget.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/headshot"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text=" 310"
        android:id="@+id/textView"
        android:textSize="50dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   辐射力"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="circles"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toStartOf="@+id/linearLayout2" />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="left|bottom|right"
            android:src="@drawable/blueball" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:id="@+id/linearLayout3"
        android:background="@color/abc_input_method_navigation_guard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magic Joe"
            android:id="@+id/textView4"
            android:layout_toStartOf="@+id/linearLayout2"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哥只是个传说！"
            android:id="@+id/textView5"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout4">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="状态"
                android:gravity="center"
                android:id="@+id/textView9"
                android:textSize="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="关注"
                android:gravity="center"
                android:id="@+id/textView10"
                android:textSize="15dp"
                android:layout_weight="0.33"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:gravity="center"
                android:id="@+id/textView11"
                android:textSize="15dp"
                android:layout_weight="0.33"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="主页"
            android:drawableTop="@drawable/house24"
            android:id="@+id/textView19"
            android:layout_weight="0.2"
            android:gravity="center"
            tools:drawableTint="@android:color/darker_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="圈圈"
            android:id="@+id/textView15"
            android:drawableTop="@drawable/abc_btn_radio_to_on_mtrl_000"

            android:layout_weight="0.2"
            android:gravity="center"
            tools:drawableTint="@android:color/darker_gray" />





    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="发布"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:id="@+id/textView16"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_alignEnd="@+id/textView"
        android:layout_weight="0.2"
        tools:drawableTint="@android:color/darker_gray" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="消息"
            android:drawableTop="@android:drawable/sym_action_email"
            android:id="@+id/textView17"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_weight="0.2"
            tools:drawableTint="@android:color/darker_gray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="我的"
            android:drawableTop="@drawable/person24"
            android:id="@+id/textView18"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/linearLayout4"
            android:layout_weight="0.2"
            android:drawableTint="@android:color/holo_blue_bright" />
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/ic_notification_overlay"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView4"
        android:src="@android:drawable/presence_video_online"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView5"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的道具"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView4"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的时间线"
        android:id="@+id/textView13"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的收藏"
        android:id="@+id/textView14"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@id/linearLayout4"
        android:layout_below="@id/linearLayout3">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="22 "
            android:gravity="center"
            android:id="@+id/textView6"
            android:textColor="#87CEEB"
            android:textSize="30dp"
            android:contextClickable="true"
            android:textColorHighlight="#87CEEB"
            android:textIsSelectable="true"
            android:layout_weight="0.33"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="13"
            android:textColor="#87CEEB"
            android:textSize="30dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="3"
            android:gravity="center"
            android:id="@+id/textView8"
            android:textSize="30dp"
            android:textIsSelectable="true"
            android:textColor="#87CEEB"
            android:layout_weight="0.33"/>
    </LinearLayout>

</RelativeLayout>
