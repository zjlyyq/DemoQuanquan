<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:alpha="0.9"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:descendantFocusability="beforeDescendants"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--头像-->
                    <com.example.zjlyyq.demo.Widget.CircleImageView
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:id="@+id/commenter_header"
                        android:scaleType="centerCrop"
                        android:src="@drawable/touxiang3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        />
                </FrameLayout>

            </LinearLayout>

            <!--用户名，-->
            <LinearLayout
                android:layout_weight="0.8"
                android:id="@+id/whoLine"
                android:paddingLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--用户名/发布时间/手机型号-->
                <TextView
                    android:id="@+id/commenter_name"
                    android:fontFamily="monospace"
                    android:text="用户名"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/comment_publish_time"
                    android:fontFamily="monospace"
                    android:text="发布时间:刚刚"
                    android:textColor="#595858"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/comment_talk"
                    android:text="正文"
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
